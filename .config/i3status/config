general {
  output_format = "i3bar"
    colors = true
    interval = 1
}

order += "volume master"
order += "memory"
order += "tztime local"

tztime local {
  format = "%H:%M:%S"
    separator = true
    separator_block_width = 20
}

volume master {
  format = "♪: %volume"
    format_muted = "♪: muted (%volume)"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

memory {
  format = "Used: %used Free: %free"
    threshold_degraded = 40%
    threshold_critical = 20%
}

