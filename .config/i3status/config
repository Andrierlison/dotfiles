general {
  output_format = "i3bar"
    colors = true
    interval = 1
}

order += "tztime local"
order += "volume master"
order += "memory"

tztime local {
    align = "right"
    min_width = 500
    separator = false
  format = "%H:%M:%S / %d-%m-%Y"
}

volume master {
    align = "center"
    device = "default"
    format_muted = "♪: muted (%volume)"
    min_width = 200
    mixer = "Master"
    mixer_idx = 0
    separator = false
  format = "♪: %volume"
}

memory {
    separator = false
    threshold_critical = 20%
    threshold_degraded = 40%
  format = "Free: %free Available: %available ( Used: %used / %total )"
}

