set $mod Mod4
set $term --no-startup-id alacritty

font pango:Harck Nerd Font 14

## Borders
for_window [class="^.*"] border pixel 4
hide_edge_borders both

exec --no-startup-id "setxkbmap -model abnt2 -layout br -variant abnt2"
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork
exec --no-startup-id nm-applet

## Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

## Basic Bindings
bindsym $mod+Tab workspace next
bindsym $mod+Shift+Tab workspace prev

# Toggle between dock mode and hide mode
bindsym $mod+n bar mode toggle

## Move and focus windows

# h
bindsym $mod+h focus left
bindsym $mod+Shift+h move left 30
bindsym $mod+Ctrl+h move workspace to output left

# j
bindsym $mod+j focus down
bindsym $mod+Shift+j move down 30
bindsym $mod+Ctrl+j move workspace to output down

# k
bindsym $mod+k focus up
bindsym $mod+Shift+k move up 30
bindsym $mod+Ctrl+k move workspace to output up

# l
bindsym $mod+l focus right
bindsym $mod+Shift+l move right 30
bindsym $mod+Ctrl+l move workspace to output right

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec $term

# kill focused window
bindsym $mod+q kill

# start rofi (a program launcher)
bindsym $mod+d exec --no-startup-id rofi -show

# enter fullscreen mode for the focused container
bindsym $mod+F11 fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+Shift+t layout tabbed
bindsym $mod+Shift+s layout toggle split

# toggle tiling / floating
bindsym $mod+space floating toggle

# a === android studio
bindsym $mod+a exec --no-startup-id $android-studio

# f
bindsym $mod+f exec --no-startup-id firefox 

# p
bindsym $mod+p exec --no-startup-id pavucontrol

# r
bindsym $mod+r exec $term -e ranger

# s === control android device
bindsym $mod+s exec $term -e scrcpy

# t === system monitor
bindsym $mod+t exec $term -e bpytop

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+F1 restart

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+F1 exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

#set primary gruvbox colorscheme colors
set $bg #282828
set $red #cc241d
set $green #98971a
set $yellow #d79921
set $blue #458588
set $purple #b16286
set $aqua #689d68
set $gray #a89984
set $darkgray #1d2021

# green gruvbox
# class border|backgr|text|indicator|child_border
client.focused $green $green $green $blue $blue
client.focused_inactive $darkgray $darkgray $yellow $purple $darkgray
client.unfocused $darkgray $darkgray $yellow $purple $darkgray
client.urgent $red $red $white $red $red
client.background #F8F8F2

bar {
  position top
    status_command i3status
    workspace_buttons yes
    colors {
      background $bg
        statusline #f1f1f1
    }
}
